<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Muek.ViewModels"
        xmlns:model="clr-namespace:Muek.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800" Height="400"
        x:DataType="vm:PluginManagerWindowViewModel"
        x:Class="Muek.Views.PluginManagerWindow"
        x:Name="Root"
        Title="PluginManagerWindow">

    <Design.DataContext>
        <vm:PluginManagerWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="12">
        <Grid VerticalAlignment="Center" Margin="0,0,0,10">
            <Label FontSize="24" FontWeight="Bold">VST Plugins</Label>
            <Button HorizontalAlignment="Right" Command="{Binding ReScan}">Re-scan</Button>
        </Grid>
        <StackPanel Grid.Row="1">
            <!-- <ItemsControl ItemsSource="{Binding Plugins}"> -->
            <!--     <ItemsControl.ItemTemplate> -->
            <!--         <DataTemplate> -->
            <!--             <Label Content="{Binding Name}"></Label> -->
            <!--         </DataTemplate> -->
            <!--     </ItemsControl.ItemTemplate> -->
            <!-- </ItemsControl> -->
            <DataGrid ItemsSource="{Binding Plugins}"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      BorderThickness="1" BorderBrush="Gray">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="2*"
                                        Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Path" Width="2*"
                                        Binding="{Binding Path}" />

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="model:VstPlugin">
                                <Button Content="Test"
                                        Command="{Binding #Root.((vm:PluginManagerWindowViewModel)DataContext).TestPlugin}"
                                        CommandParameter="{Binding Path}">
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>

</Window>