<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:neumorphism="https://github.com/flarive/Neumorphism.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400"
             x:Class="Muek.Views.MuekPlugin">
    <Border Padding="5" Background="#232323" Margin="4" CornerRadius="5">
    <Grid RowDefinitions="40,*" Background="#232323">
        <Border Background="#23000000" Margin="4 0"
                VerticalAlignment="Center" Padding="6">
            <StackPanel Orientation="Horizontal">
                <Border Width="4" Name="PluginColor" Margin="0 0 5 0" Height="12"/>
                <TextBlock Name="PluginName" FontWeight="Bold"></TextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Background="#23000000" Margin="4 0" Padding="8"
                Name="PluginContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
    </Border>
</UserControl>
