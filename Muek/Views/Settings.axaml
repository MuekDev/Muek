<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Muek.Views.Settings">
    <Grid RowDefinitions="Auto,*" Margin="20,5">
        <TextBlock>Settings</TextBlock>
        <Grid Grid.Row="1" Width="400" Margin="20,0">
            <TabControl>
                <TabItem Header="Audio" FontSize="12">
                    <TextBlock>Here is Audio Settings</TextBlock>
                </TabItem>
                <TabItem Header="File" FontSize="12">
                    <TextBlock>Here is File Settings</TextBlock>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
